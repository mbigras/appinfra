---
groups:
  - name: blackbox
    rules:
      - alert: MagServerIcmpProbeFailed
        expr: probe_success{job="mag_icmp"} == 0 or up{job="mag_icmp"} == 0
        for: 1m
        labels:
          severity: "critical"
        annotations:
          summary: "ICMP blackbox probe failed for management instance {{ "{{" }} $labels.instance {{ "}}" }}"
          description: ""

      - alert: AppServerIcmpProbeFailed
        expr: probe_success{job="app_icmp"} == 0 or up{job="app_icmp"} == 0
        for: 1m
        labels:
          severity: "critical"
        annotations:
          summary: "ICMP blackbox probe failed for app instance {{ "{{" }} $labels.instance {{ "}}" }}"
          description: ""
