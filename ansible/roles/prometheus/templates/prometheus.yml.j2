---
global:
  scrape_interval: 15s

rule_files:
  - 'rules/*.yml'

alerting:
  alertmanagers:
    - static_configs:
      - targets:
          - {{ alertmanager_host }}:9093

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets:
          - '{{ prometheus_host }}:9090'

  - job_name: 'node'
    static_configs:
      - targets:
{% for host in groups[site] %}
          - {{ hostvars[host]['inventory_hostname'] }}:9100
{% endfor %}

  - job_name: 'docker'
    static_configs:
      - targets:
{% for host in groups[site] %}
          - {{ hostvars[host]['inventory_hostname'] }}:9417
{% endfor %}
